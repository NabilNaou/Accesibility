@model StreetTalkUser

@{
    ViewData["Title"] = "Verwijder account";
}

<div class="d-flex justify-content-center align-items-center container my-4">
    <div class="row w-100">
        <div class="card p-4 col-12">
            <h1>Verwijder account</h1>
            <p>Let op! deze actie is permanent en kan niet ongedaan gemaakt worden.</p>
            @using (Html.BeginForm("DeleteAccount", "Profile", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="email">Vul uw email in</label>
                    <input type="email" id="email" name="email" class="form-control"/>
                </div>
                <input type="submit" value="Verwijder mijn account" class="btn btn-danger"/>
            }
        </div>
    </div>
</div>