@using StreetTalk.Utils
@model PublicPost

@{
    ViewData["Title"] = Model.Title;
}

@section styles {
    <link href="~/css/post.css" rel="stylesheet" />
}
<div class="d-flex justify-content-between">
    <h1 class="mb-0 mt-4">@Model.Title</h1>
    <span class="d-flex align-items-end">Gemeld op @Model.CreatedAt?.ToString("dd-MM-yyyy") door @Model.User.Profile.FullName</span>
</div>
<hr/>
<div class="d-flex flex-column align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
            @if (Model.Photo != null)
            {
                <img class="img-fluid w-100 shadow post-image" alt="Afbeelding over @Model.Title" src="@Model.Photo.Photo.Filename"/>
            }
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xs-12 col-lg-8">
                @Markdown.ParseHtmlString(Model.Content)
            </div>
        </div>
    </div>
</div>