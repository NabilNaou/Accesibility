@model User

@{
    ViewData["Title"] = "Registreren";
}

<div class="min-vh-100 w-100 d-flex justify-content-center align-items-center">
    <div class="card p-4">
        <h1 class="mb-4 mr-5">Email verstuurd</h1>
        @using (Html.BeginForm("VerifieerEmail", "Account", FormMethod.Get))
        {
            <div>
                <label for="code">Voer hier uw code in</label>
                <input class="form-control" id="code" type="text" name="code"/>
            </div>
            <input class="btn btn-primary w-100 mt-4" type="submit" value="Verder"/>
        }
    </div>
    <div class="w-100 position-fixed min-vh-100 st-working-from-anywhere"></div>
</div>