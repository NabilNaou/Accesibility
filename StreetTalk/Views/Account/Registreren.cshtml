@model User

@{
    ViewData["Title"] = "Registreren";
}

<div class="min-vh-100 w-100 d-flex justify-content-center align-items-center">
    <div class="card p-4">
        <h1 class="mb-4 mr-5">Registreren</h1>
        @using (Html.BeginForm("Registreren", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
            </div>
            //TODO: stop captcha hier
            <input class="btn btn-primary w-100 mt-4" type="submit" value="Registreer"/>
        }
    </div>
    <div class="w-100 position-fixed min-vh-100 st-working-from-anywhere"></div>
</div>