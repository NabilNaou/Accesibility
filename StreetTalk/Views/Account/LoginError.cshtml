@model User

<div class="min-vh-100 w-100 d-flex justify-content-center align-items-center">
    <div class="card p-4">
        <h1 class="mb-4 mr-5">Inloggen</h1>
        <p>Er is iets fout gegaan, probeer het opnieuw</p>
        @using (Html.BeginForm("Inloggen", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.email)
                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.email)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.password)
                @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.password)</span>
            </div>
            <input class="btn btn-primary w-100 mt-4" type="submit" value="Login" />
        }
    </div>
    <div class="w-100 position-fixed min-vh-100 st-working-from-anywhere"></div>
</div>
