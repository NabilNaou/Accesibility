@model PublicPost

<div class="post-row card mb-4 w-100 d-flex flex-row">
    <div class="status-indicator @(Model.Closed ? "closed" : "open")"></div>
    <div class="w-100 d-flex flex-row p-3">
        <div class="d-flex flex-column justify-content-center align-items-center mr-3">
            <img src="@Model.User.Profile.Photo?.Photo?.Filename" class="rounded-circle profile-image" alt="profile photo"/>
        </div>
        <div class="d-flex flex-grow-1 flex-column justify-content-between mr-3">
            <h2 class="post-title">@Model.Title</h2>
            <h3 class="post-content">@Model.Content</h3>
        </div>
        <div class="post-date d-flex flex-column justify-content-center text-right mr-2">
            <span class="d-block">@Model.CreatedAt?.ToString("dd-MM-yyyy")</span>
        </div>
        <div class="post-author d-flex flex-column justify-content-center mr-3 text-center">
            <span>Gemeld door</span>
            <span class="d-block">@Model.User.Profile.FirstName @Model.User.Profile.LastName</span>
        </div>
        <div class="post-actions d-flex flex-row justify-content-center align-items-center">
            <a class="mr-3">
                <img class="post-action-icon" src="~/img/report.svg"/>
            </a>
            <a>
                <img class="post-action-icon" src="~/img/favorite.svg"/>
            </a>
        </div>
    </div>
</div>